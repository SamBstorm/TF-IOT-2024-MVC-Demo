@{
    string[] TEXTS = ["Plus de stock","Quantité limitée","En stock"];
    string[] COLORS = [ "red", "orange", "green" ];
    // uint quantity = (uint)ViewData["Quantity"];
    uint quantity = ViewBag.Quantity;
    int currentValue = (quantity <= 0) ? 0 : (quantity < 5) ? 1 : 2;
}

