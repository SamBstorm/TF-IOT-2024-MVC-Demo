<p style="color : @COLORS[currentValue]">@TEXTS[currentValue]</p>

@switch (currentValue)
{
    case 1 :
        <select>
            @for (int i = 1; i <= quantity; i++)
            {
                <option>@i</option>
            }
        </select>
        break;
    case 2 :
        <div>
            <label for="qty">Quantité :</label>
            <input type="number" id="qty" min="1" max="@quantity"/>
        </div>
        break;
}